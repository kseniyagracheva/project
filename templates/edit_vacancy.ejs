<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Edit Vacancy</title>
</head>
<body>
    <h1>Edit Vacancy</h1>
    <form method="POST">
        <label for="title">Title:</label>
        <input type="text" id="title" name="title" value="<%= vacancy.title %>" required><br>
        
        <label for="company_id">Company:</label>
        <select id="company_id" name="company_id" required>
            <% companies.forEach(company => { %> 
                <option value="<%= company._id %>" <% if (company._id == vacancy.company_id) { %>selected<% } %>> 
                    <%= company.name %>
                </option>
            <% }) %>
        </select><br>
        
        <label for="category_id">Category:</label>
        <select id="category_id" name="category_id" required>
            <% categories.forEach(category => { %> 
                <option value="<%= category._id %>" <% if (category._id == vacancy.category_id) { %>selected<% } %>> 
                    <%= category.name %>
                </option>
            <% }) %>
        </select><br>
        
        <input type="submit" value="Update Vacancy">
    </form>
    <a href="/vacancies">Back to Vacancies</a> 
</body>
</html>